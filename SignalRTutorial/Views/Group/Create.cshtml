@model SignalRTutorial.Models.Group

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <input type="hidden" name="connectionId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    document.addEventListener("DOMContentLoaded", async () => {
    try {
        // âœ… Wait for connection to be ready
        const connection = await window.signalRReady;

        console.log("Chat.js using connection:", connection.connectionId);

        connection.on("ReceiveMessage", (user, message) => {
            console.log(`${user}: ${message}`);
        });

        } catch (err) {
            console.error("SignalR not ready:", err);
        }
    });

    </script>
}
